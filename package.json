{
  "name": "full-stack-typescript-monorepo-starter-with-authentication",
  "version": "1.0.0",
  "description": "A starter monorepo with Node.js backend, GraphQL API, and React frontend. The whole stack is with TypeScript.",
  "author": "Martin Brandhaug <martin@brandhaug.net>",
  "license": "ISC",
  "scripts": {
    "graphql-codegen": "graphql-codegen --config codegen.yml",
