{
  "name": "@full-stack-typescript-monorepo-starter-with-authentication/server",
  "version": "0.0.0",
  "scripts": {
    "dev": "dotenv -e .env.development -- ts-node-dev --respawn src/server.ts",
    "build": "dotenv -e .env.production ts-node src/server.ts",
    "test": "tsc && eslint . && npm run test:jest",
    "test:jest": "docker compose up --force-recreate -d db-test && sleep 1 && dotenv -e .env.test -- prisma migrate deploy && dotenv -e .env.test -- jest && docker compose rm --stop --force -v db-test"
  },
  "dependencies": {
    "@full-stack-typescript-monorepo-starter-with-authentication/conf": "0.0.0",
    "@full-stack-typescript-monorepo-starter-with-authentication/utils": "0.0.0",
    "@graphql-tools/schema": "^9.0.4",
    "@graphql-yoga/node": "^2.13.13",
    "@prisma/client": "^4.4.0",
    "axios": "^1.1.2",
    "axios-retry": "^3.3.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.8.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.4",
    "@types/nodemailer": "^6.4.6",
    "babel-jest": "^29.1.2",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.25.0",
    "jest": "^29.1.2",
    "jest-mock-extended": "^3.0.1",
    "prisma": "^4.4.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
