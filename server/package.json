{
  "name": "@full-stack-typescript-monorepo-starter-with-authentication/server",
  "version": "0.0.0",
  "scripts": {
    "dev": "dotenv -e .env.development -- ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "prisma generate && prisma migrate deploy && swc src -d dist && cp src/schema.graphql dist/schema.graphql",
    "start": "node dist/server.js",
    "test": "tsc --noEmit && eslint . && npm run test:jest",
    "test:jest": "docker compose up --force-recreate -d db-test && sleep 3 && dotenv -e .env.test -- prisma migrate deploy && dotenv -e .env.test -- jest && docker compose rm --stop --force -v db-test",
    "prisma": "prisma"
  },
  "dependencies": {
    "@full-stack-typescript-monorepo-starter-with-authentication/conf": "0.0.0",
    "@graphql-tools/schema": "^9.0.8",
    "@graphql-yoga/node": "^2.13.13",
    "@prisma/client": "^4.5.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.14",
    "axios": "^1.1.3",
    "axios-retry": "^3.3.1",
    "bcrypt": "^5.1.0",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.8.0",
    "prisma": "^4.5.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "jest-mock-extended": "^3.0.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
