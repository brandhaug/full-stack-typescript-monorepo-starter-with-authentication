{
  "name": "@fstmswa/server",
  "version": "0.0.0",
  "scripts": {
    "build": "prisma generate && dotenv -e .env.production -- prisma migrate deploy && dotenv -e .env.production -- ./build.js && cp src/schema.graphql dist/schema.graphql",
    "circular": "madge --circular ./src/index.ts",
    "dev": "dotenv -e .env.development -- ts-node-dev --respawn --transpile-only src/index.ts",
    "esbuild": "esbuild",
    "jest": "docker compose up --force-recreate -d db-test && sleep 3 && dotenv -e .env.test -- prisma migrate deploy && dotenv -e .env.test -- jest && docker compose rm --stop --force -v db-test",
    "lint": "eslint .",
    "lint-fix": "npm run lint -- --fix",
    "prisma": "prisma",
    "prisma:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "start": "node dist/main.js",
    "test": "pnpm run tsc && pnpm run lint && pnpm run jest",
    "tsc": "tsc"
  },
  "dependencies": {
    "@envelop/prometheus": "^7.0.6",
    "@envelop/sentry": "^5.1.1",
    "@fstmswa/conf": "0.0.0",
    "@fstmswa/types": "0.0.0",
    "@graphql-tools/schema": "^9.0.17",
    "@prisma/client": "^4.11.0",
    "@sentry/node": "^7.43.0",
    "@sentry/tracing": "^7.43.0",
    "axios": "^1.3.4",
    "axios-cache-interceptor": "^1.0.1",
    "axios-retry": "^3.4.0",
    "bcrypt": "^5.1.0",
    "esbuild": "^0.17.12",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "graphql": "^16.6.0",
    "graphql-middleware": "^6.1.33",
    "graphql-shield": "^7.6.5",
    "graphql-yoga": "^3.7.3",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.1",
    "prisma": "^4.11.0",
    "prom-client": "^14.2.0",
    "winston": "^3.8.2",
    "winston-loki": "^6.0.6",
    "winston-transport-sentry-node": "^2.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.3",
    "@types/nodemailer": "^6.4.7",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.3",
    "madge": "^6.0.0",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=18"
  }
}
