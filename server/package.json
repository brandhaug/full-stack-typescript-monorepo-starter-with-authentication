{
  "name": "@fstmswa/server",
  "version": "0.0.0",
  "scripts": {
    "dev": "dotenv -e .env.development -- ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "prisma generate && dotenv -e .env.production -- prisma migrate deploy && dotenv -e .env.production -- ./build.js && cp src/schema.graphql dist/schema.graphql",
    "start": "node dist/main.js",
    "test": "tsc && eslint . && npm run test:jest",
    "test:jest": "docker compose up --force-recreate -d db-test && sleep 3 && dotenv -e .env.test -- prisma migrate deploy && dotenv -e .env.test -- jest && docker compose rm --stop --force -v db-test",
    "prisma": "prisma",
    "prisma:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "esbuild": "esbuild"
  },
  "dependencies": {
    "@envelop/prometheus": "^7.0.4",
    "@envelop/sentry": "^5.0.0",
    "@fstmswa/conf": "0.0.0",
    "@fstmswa/types": "0.0.0",
    "@graphql-tools/schema": "^9.0.12",
    "@prisma/client": "^4.8.1",
    "@sentry/node": "^7.29.0",
    "@sentry/tracing": "^7.29.0",
    "axios": "^1.2.2",
    "axios-cache-interceptor": "^1.0.0",
    "axios-retry": "^3.3.1",
    "bcrypt": "^5.1.0",
    "esbuild": "^0.16.15",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "graphql": "^16.6.0",
    "graphql-yoga": "^3.3.0",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.8.0",
    "prisma": "^4.8.1",
    "prom-client": "^14.1.1",
    "winston": "^3.8.2",
    "winston-loki": "^6.0.6",
    "winston-transport-sentry-node": "^2.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/nodemailer": "^6.4.7",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=18"
  }
}
